header.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#/") Exam Todo
        div.navbar-collapse.collapse.navbar-responsive-collapse
            ul.nav.navbar-nav
                li
                    a(href="#/todos") All todos
            ul.nav.navbar-nav.navbar-right(ng-controller="NavController")
                li(ng-show="identity.isAuthenticated()")
                    a(href="#/items/create" ng-show="identity.isAuthenticated()")
                        span.glyphicon.glyphicon-plus-sign
                        |  New Todo
                li(ng-hide="identity.isAuthenticated()")
                    a(href="#/register" ng-show="!identity.isAuthenticated()")
                        span.glyphicon.glyphicon-plus-sign
                        |  New Todo

                li(ng-show="identity.isAuthenticated()")
                    a(href="#/profile")
                        span.fa.fa-shopping-cart
                        |  My Todos
                li(ng-show="identity.isAuthenticated()")
                    a(href="#/inbox")
                        span.fa.fa-envelope
                        |  Inbox
                li.dropdown(ng-show="identity.isAuthenticated()")
                    a.dropdown-toggle(href="", data-toggle="dropdown")
                        span.fa.fa-user
                        | {{ ' ' + identity.currentUser.firstName + ' ' + identity.currentUser.lastName + ' ' }}
                        span.caret
                    ul.dropdown-menu
                        li(ng-show="identity.currentUser.isAdmin()")
                            a(href="#/admin")
                                span.fa.fa-fw.fa-gear
                                | Administration
                        li(ng-show="identity.isAuthenticated()")
                            a(href="#/profile")
                                span.fa.fa-fw.fa-user
                                | Profile
                        li(ng-show="identity.isAuthenticated()")
                            a(href="#/settings")
                                span.fa.fa-fw.fa-gear
                                | Settings
                        li.divider
                        li
                            a(href="#" ng-click="logout()")
                                span.fa.fa-fw.fa-power-off
                                | Sign Out
                li(ng-hide="identity.isAuthenticated()")
                    a(href="#/register") Register
                li(ng-hide="identity.isAuthenticated()")
                    a(href="#/login") Sign In