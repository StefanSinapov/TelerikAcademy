extends ../shared/layout

block main-content
    form(method="post" enctype="multipart/form-data")
        label(for="username") Username
        input(id="username" class="form-control" type="text" name="username" placeholder="Username", required="")
        label(for="email") Email
        input(id="email" class="form-control" type="email" name="email" placeholder="Email", required="")
        br
        .row
            .col-md-6
                label(for="firstName") First Name
                input(id="firstName" class="form-control" type="text" name="firstName" placeholder="FirstName" required="")
            .col-md-6
                label(for="lastName") Last Name
                input(id="lastName" class="form-control" type="text" name="lastName" placeholder="LastName" required="")

        br
        .row
            .col-md-6
                label(for="profilePicture") Profile picture
                input(type="file" name="profilePicture" id="profilePicture")
            .col-md-6
                label(for="phoneNumber") Phone number
                input(id="phoneNumber" class="form-control" type="text" name="phoneNumber" placeholder="0899 99 99 99" )
        br
        .row
            .col-md-6
                label(for="facebookProfile") Facebook profile
                input(id="facebookProfile" class="form-control" type="text" name="facebookProfile" placeholder="facebook profile" )
            .col-md-6
                label(for="twitterProfile") Twitter profile
                input(id="twitterProfile" class="form-control" type="text" name="twitterProfile" placeholder="twitter profile" )
        br
        .row
            .col-md-6
                label(for="linkedInProfile") LinkeIn profile
                input(id="linkedInProfile" class="form-control" type="text" name="linkedInProfile" placeholder="linkedInProfile" )
            .col-md-6
                label(for="googlePlusProfile") Twitter profile
                input(id="googlePlusProfile" class="form-control" type="text" name="googlePlusProfile" placeholder="google plus Profile" )
        br
        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Password" required="")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password" required="")
        br
        input(type="submit" class="btn btn-lg" value="Register")