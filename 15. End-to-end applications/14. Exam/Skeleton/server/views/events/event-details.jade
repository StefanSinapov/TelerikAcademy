extends ../shared/layout
block main-content
    .container
        .col-md-6.col-md-offset-3
            h4 Event Info

            form(method="POST" action="/events/#{event._id}/join")
                input(type="submit" class="btn btn-success" value="Join")
            ul.list-group
                li.list-group-item
                    span.list-group-item-text
                        strong Title:
                        |  #{event.title}
                li.list-group-item
                    span.list-group-item-text
                        strong Description:
                        |  #{event.description}
                li.list-group-item
                    span.list-group-item-text
                        strong Date:
                        |  #{event.date}
                li.list-group-item
                    span.list-group-item-text
                        strong Location:
                        |  #{event.location}
                li.list-group-item
                    span.list-group-item-text
                        strong Category:
                        |  #{event.category}
                li.list-group-item
                    h6
                        strong Type
                    .list-group-item-text
                        if event.type.isPublic
                            | Public event
                        else
                            if event.type.initiative
                                strong Initiative:
                                |  #{event.type.initiative}
                            if event.type.season
                                br
                                strong Initiative:
                                |  #{event.type.season}
                li.list-group-item
                    h6
                        strong Creator
                    .list-group-item-text
                        strong username:
                        |  #{event.creator.username}
                    .list-group-item-text
                        strong phone number:
                        |  #{event.creator.phoneNumber}
                li.list-group-item
                    h6
                        strong Comments:
                    each comment in event.comments
                        .list-group-item-text
                            strong #{comment.username}:
                            |  #{comment.content}
            form(method="POST")
                label(for="comment") New Comment:
                textarea(id="comment" class="form-control" type="text" name="comment" placeholder="Comment...", required="")
                input(type="submit" class="btn btn-primary" value="Send")
block page-scripts
    script(src="../lib/jquery-2.1.1/jquery.min.js")
    script(src="../lib/bootstrap-3.2.0/js/bootstrap.min.js")
    script(src="../js/pager.js")